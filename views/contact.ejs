<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="styles.css" rel="stylesheet">
    <title>GreenSignal| Your SEO one stop shop</title>
</head>

<body class="bg-sky-100">

    <!-- Include Navbar -->
    <%- include('partials/navbar') %>
        <div class="container flex align-center justify-center w-100">
            <!-- Contact Form -->
            <main class="container mx-auto mt-10 p-4">
                <h1 class="text-3xl font-bold text-center text-gray-800">Contact Us</h1>
                <div class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-6 mt-6">
                    <form action="/contact" method="POST">

                        <div class="mb-4">
                            <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                            <input type="text" name="name" id="name" required
                                class="w-full mt-1 p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        </div>

                        <div class="mb-4">
                            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                            <input type="email" name="email" id="email" required
                                class="w-full mt-1 p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        </div>

                        <div class="mb-4">
                            <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                            <textarea name="message" id="message" rows="4" required
                                class="w-full mt-1 p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                        </div>

                        <button type="submit"
                            class="w-full bg-blue-600 text-white font-semibold p-3 rounded-md hover:bg-blue-700 transition duration-300">
                            Send Message
                        </button>
                    </form>
                </div>
            </main>
        </div>
        <!-- Script for toggling mobile menu -->
        <script>
            const menuBtn = document.getElementById('menu-btn');
            const menu = document.getElementById('mobile-menu');

            menuBtn.addEventListener('click', () => {
                menu.classList.toggle('hidden');
            });
        </script>
</body>

</html>